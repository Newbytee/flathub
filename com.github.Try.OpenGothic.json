{
	"app-id": "com.github.Try.OpenGothic",
	"runtime": "org.freedesktop.Platform",
	"runtime-version": "20.08",
	"sdk": "org.freedesktop.Sdk",
	"finish-args": [
		"--socket=x11",
		"--socket=pulseaudio",
		"--device=dri",
		"--filesystem=host"
	],
	"modules": [
		{
			"name": "opengothic",
			"buildsystem": "cmake",
			"sources": [
				{
					"type": "git",
					"url": "https://github.com/Try/OpenGothic.git",
					"tag": "v0.37",
					"x-checker-data": {
					    "type": "git",
					    "tag-pattern": "^v([\\d.]+)$"
					}
				}
			]
		},
		{
			"name": "metadata",
			"buildsystem": "simple",
			"build-commands": [
				"install -Dm644 com.github.Try.OpenGothic.appdata.xml /app/share/appdata/com.github.Try.OpenGothic.appdata.xml"
			],
			"sources": [
				{
					"type": "file",
					"path": "com.github.Try.OpenGothic.appdata.xml"
				}
			]
		}
	]
}
